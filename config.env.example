# LLM Bridge for Claude Code Configuration
# Copy this file to .env and update the values as needed

# API Keys (set at least one)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Preferred Provider (openai, anthropic, google, ollama)
PREFERRED_PROVIDER=openai

# Model Configuration
# For OpenAI models
BIG_MODEL=gpt-4o
SMALL_MODEL=gpt-3.5-turbo

# For Anthropic models
# BIG_MODEL=claude-3-opus-20240229
# SMALL_MODEL=claude-3-haiku-20240307

# For Google models
# BIG_MODEL=gemini-1.5-pro
# SMALL_MODEL=gemini-1.5-flash

# For Ollama models
# BIG_MODEL=llama3.2:70b
# SMALL_MODEL=llama3.2:3b

# Ollama Configuration
OLLAMA_API_BASE=http://localhost:11434

# Server Configuration
HOST=0.0.0.0
PORT=8083

# Logging
LOG_LEVEL=INFO 